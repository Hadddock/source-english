      { "__type": "text", "text": "Is it cold?" },
      { "__type": "text", "text": "No, it isn't.\nNo, it is not." },
      { "__type": "text", "text": "Are we late?" },
      { "__type": "text", "text": "No, we aren't.\nNo, we are not." },
      { "__type": "text", "text": "Am I wrong?" },
      { "__type": "text", "text": "No, you aren't.\nNo, you are not." }
